<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="address" class="com.ashu.Address">
        <constructor-arg value="Azamgarh"></constructor-arg>
        <constructor-arg value="Uttar Pradesh"></constructor-arg>
        <constructor-arg value="India"></constructor-arg>
    </bean>
    <bean id="studentbean" class="com.ashu.Student">
        <constructor-arg value="10" type="int"></constructor-arg>
        <constructor-arg value="Ashutosh Kumar Singh" type="String"></constructor-arg>
        <constructor-arg ref="address"></constructor-arg>
    </bean>

    <bean id="answer1" class="com.ashu.Answer">
        <constructor-arg value="1" type="int"></constructor-arg>
        <constructor-arg value="Java is a OOPS concept"></constructor-arg>
        <constructor-arg value="7" type="int"></constructor-arg>
        <constructor-arg value="Desi"></constructor-arg>
    </bean>

    <bean id="answer2" class="com.ashu.Answer">
        <constructor-arg value="2" type="int"></constructor-arg>
        <constructor-arg value="Java is a programming language"></constructor-arg>
        <constructor-arg value="4" type="int"></constructor-arg>
        <constructor-arg value="Jhon"></constructor-arg>
    </bean>
    <bean id="answer3" class="com.ashu.Answer">
        <constructor-arg value="3" type="int"></constructor-arg>
        <constructor-arg value="Java is an island"></constructor-arg>
        <constructor-arg value="25" type="int"></constructor-arg>
        <constructor-arg value="Bhukkad"></constructor-arg>

    </bean>
    <bean id="question1" class="com.ashu.Question">
        <constructor-arg value="1"></constructor-arg>
        <constructor-arg value="What is Java?"></constructor-arg>
        <constructor-arg>
            <map>
                <entry key="Java is a OOPS concept" value="Jhon"></entry>
                <entry key="Java is an island" value="Bukkhad"></entry>
                <entry key="Java is a programming languag" value="Desi"></entry>
            </map>
        </constructor-arg>
    </bean>
    <bean id="b" class="com.ashu.B"></bean>
    <bean id="a" class="com.ashu.A" autowire="byName"></bean>
</beans>